<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_ergebnis_liste"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Hauptinhalt der Activity -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <!-- TextView für die Anzahl der Ergebnisse -->
        <TextView
            android:id="@+id/text_view_anzahl_ergebnisse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anzahl gespeicherter Ergebnisse: 0"
            android:textSize="18sp"
            android:layout_margin="16dp"/>

        <!-- ListView für die Ergebnisse -->
        <ListView
            android:id="@+id/list_view_ergebnisse"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@android:color/darker_gray"
            android:dividerHeight="1dp"/>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_ergebnis_liste"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@layout/navigation_menu"/>

</androidx.drawerlayout.widget.DrawerLayout>
